<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".FavoriteFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relay1">

        <ImageView

            android:id="@+id/img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/img"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Tengku Alvin Firdaus"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:text="Selamat Datang di Halaman Profile"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/status"
            android:text="1910031802129"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/img"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relay1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Email"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/almemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="1910031802129@sar.ac.id"
                android:textSize="20dp"/>
            
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lrl"
                android:layout_marginTop="2dp"
                android:layout_below="@id/almemail"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lrl"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="instagram"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idinstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instagram"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="nprblmm"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lrl2"
                android:layout_marginTop="2dp"
                android:layout_below="@id/almemail"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idinstagram"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Twitter"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idtwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twitter"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="nprblmm_/Tengku Alvin Firdaus"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lrl3"
                android:layout_marginTop="2dp"
                android:layout_below="@id/almemail"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idtwitter"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="WhastsApp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idwhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whatsapp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="081266563767"
                android:textSize="20dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lrl4"
                android:layout_marginTop="2dp"
                android:layout_below="@id/idwhatsapp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>










        </RelativeLayout>

    </ScrollView>


    



</RelativeLayout>